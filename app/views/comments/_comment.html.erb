<% if current_user %>
  <b>New Comment</b>
  <% semantic_form_for Comment.new do |f| %>
    <% f.inputs do %>
      <%= f.input :body, :label => false, :input_html => { :rows => 2, :cols => 10 } %>
      <%= f.input :subject_type, :as => :hidden, :input_html => {:value => subject.class.name}, :wrapper_html => { :style => "display:none;" } %>
      <%= f.input :subject_id, :as => :hidden, :input_html => {:value => subject.id}, :wrapper_html => { :style => "display:none;" } %>
      <input type="submit" value="Add Comment" />
    <% end %>
  <% end %>
<% else %>
  You must be logged in comment
<% end %>
