<% if !current_user %>
  <h1>Add Comment</h1>
  <% semantic_form_for Comment.new do |f| %>
    <% f.inputs do %>
      <%= f.input :body %>
      <input type="hidden" name="comment[subject_type]" id="comment_subject_type" value="<%= presentation.class.name %>" />
      <input type="hidden" name="comment[subject_id]" id="comment_subject_id" value="<%= presentation.id %>" />
    <% end %>
    <%= f.buttons %>
  <% end %>
<% else %>
  You must be logged in comment
<% end %>
